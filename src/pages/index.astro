  <script is:inline>
    // Make functions globally available
    window.openOrderModal = function(slug, title, price) {
      const modal = document.getElementById('order-modal');
      const designInput = document.getElementById('order-design');
      const titleElement = document.getElementById('modal-product-title');
      const priceElement = document.getElementById('modal-product-price');
      
      if (modal && designInput && titleElement && priceElement) {
        designInput.value = slug;
        titleElement.textContent = title;
        priceElement.textContent = 'Rs ' + price.toLocaleString();
        modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      }
    };

    window.closeOrderModal = function() {
      const modal = document.getElementById('order-modal');
      const form = document.getElementById('order-form');
      
      if (modal) {
        modal.classList.add('hidden');
        document.body.style.overflow = 'auto';
        if (form) {
          form.reset();
        }
      }
    };

    window.submitOrder = function(event) {
      event.preventDefault();
      const form = event.target;
      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());
      
      const whatsappNumber = '923227555459';
      const message = '*Wedding Room Decoration Order*\n\n' +
        '*Design:* ' + data.design + '\n' +
        '*Name:* ' + data.name + '\n' +
        '*Phone:* ' + data.phone + '\n' +
        '*Area:* ' + data.area + '\n' +
        '*Date & Time:* ' + data.date_time + '\n' +
        '*Notes:* ' + (data.notes || 'None') + '\n\n' +
        'Please confirm this order.';

      const whatsappUrl = 'https://wa.me/' + whatsappNumber + '?text=' + encodeURIComponent(message);
      window.open(whatsappUrl, '_blank');
      window.closeOrderModal();
    };

    window.loadMoreProducts = function() {
      const hiddenProducts = document.getElementById('hidden-products');
      const productsGrid = document.getElementById('products-grid');
      const viewMoreBtn = document.getElementById('view-more-btn');
      
      if (hiddenProducts && hiddenProducts.classList.contains('hidden')) {
        hiddenProducts.classList.remove('hidden');
        hiddenProducts.classList.add('grid');
        const hiddenCards = hiddenProducts.querySelectorAll('.product-card');
        hiddenCards.forEach(function(card) {
          productsGrid.appendChild(card);
        });
        hiddenProducts.remove();
        if (viewMoreBtn) {
          viewMoreBtn.remove();
        }
      }
    };

    // Event delegation for Order Now buttons
    document.addEventListener('DOMContentLoaded', function() {
      document.addEventListener('click', function(e) {
        if (e.target && e.target.classList.contains('order-now-btn')) {
          const btn = e.target;
          const slug = btn.getAttribute('data-product-slug');
          const title = btn.getAttribute('data-product-title');
          const price = parseInt(btn.getAttribute('data-product-price'));
          
          if (slug && title && price) {
            window.openOrderModal(slug, title, price);
          }
        }
      });
    });
