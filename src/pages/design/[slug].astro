                  <input type="text" id="order-area" name="area" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-pink-500 focus:border-pink-500" placeholder="e.g., Bahria Town, DHA" />
                </div>
                <div>
                  <label for="order-datetime" class="block text-sm font-medium text-gray-700 mb-1">Date & Time *</label>
                  <input type="datetime-local" id="order-datetime" name="date_time" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-pink-500 focus:border-pink-500" />
                </div>
                <div>
                  <label for="order-notes" class="block text-sm font-medium text-gray-700 mb-1">Additional Notes</label>
                  <textarea id="order-notes" name="notes" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-pink-500 focus:border-pink-500" placeholder="Any special requirements or preferences..."></textarea>
                </div>
              </div>
              
              <!-- Payment Information -->
              <div class="mt-6 pt-4 border-t border-gray-200">
                <p class="text-sm text-gray-600 mb-2">
                  <strong>Payment:</strong> After decoration is completed at your location.
                </p>
                <p class="text-sm text-gray-600">
                  If you have any questions, please <a href={whatsappUrl} target="_blank" rel="noopener noreferrer" class="text-pink-600 hover:text-pink-700 font-semibold underline">contact us on WhatsApp</a>.
                </p>
              </div>
            </div>
          </div>
          <div class="mt-5 sm:mt-6 sm:flex sm:flex-row-reverse gap-3">
            <button type="submit" class="w-full sm:w-auto bg-pink-600 hover:bg-pink-700 text-white px-6 py-2.5 rounded-lg font-semibold transition-colors">
              Submit Order
            </button>
            <button type="button" onclick="window.closeOrderModal()" class="mt-3 w-full sm:mt-0 sm:w-auto bg-gray-200 hover:bg-gray-300 text-gray-800 px-6 py-2.5 rounded-lg font-semibold transition-colors">
              Cancel
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script is:inline>
    // Make functions globally available
    window.openOrderModal = function(slug, title, price) {
      const modal = document.getElementById('order-modal');
      const designInput = document.getElementById('order-design');
      const titleElement = document.getElementById('modal-product-title');
      const priceElement = document.getElementById('modal-product-price');
      
      if (modal && designInput && titleElement && priceElement) {
        designInput.value = slug;
        titleElement.textContent = title;
        priceElement.textContent = 'Rs ' + price.toLocaleString();
        modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      }
    };

    window.closeOrderModal = function() {
      const modal = document.getElementById('order-modal');
      const form = document.getElementById('order-form');
      
      if (modal) {
        modal.classList.add('hidden');
        document.body.style.overflow = 'auto';
        if (form) {
          form.reset();
        }
      }
    };

    window.submitOrder = function(event) {
      event.preventDefault();
      const form = event.target;
      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());
      
      const whatsappNumber = '923227555459';
      const message = '*Wedding Car Decoration Order*\n\n' +
        '*Design:* ' + data.design + '\n' +
        '*Name:* ' + data.name + '\n' +
        '*Phone:* ' + data.phone + '\n' +
        '*Area:* ' + data.area + '\n' +
        '*Date & Time:* ' + data.date_time + '\n' +
        '*Notes:* ' + (data.notes || 'None') + '\n\n' +
        'Please confirm this order.';

      const whatsappUrl = 'https://wa.me/' + whatsappNumber + '?text=' + encodeURIComponent(message);
      window.open(whatsappUrl, '_blank');
      window.closeOrderModal();
    };

    // Event delegation for Order Now buttons
    document.addEventListener('DOMContentLoaded', function() {
      document.addEventListener('click', function(e) {
        if (e.target && e.target.classList.contains('order-now-btn')) {
          const btn = e.target;
          const slug = btn.getAttribute('data-product-slug');
          const title = btn.getAttribute('data-product-title');
          const price = parseInt(btn.getAttribute('data-product-price'));
          
          if (slug && title && price) {
            window.openOrderModal(slug, title, price);
          }
        }
      });
    });
  </script>

  <!-- Bottom padding for mobile sticky bar -->
  <div class="md:hidden h-20"></div>

</body>
</html>

