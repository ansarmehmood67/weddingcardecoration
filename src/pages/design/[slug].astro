import { getProductBySlug, getAllProductSlugs, products } from '../../data/products';

export async function getStaticPaths() {
  const slugs = getAllProductSlugs();
  return slugs.map((slug) => ({
    params: { slug },
  }));
}

const { slug } = Astro.params;
const product = getProductBySlug(slug || '');

if (!product) {
  return Astro.redirect('/404');
}

const siteUrl = 'https://weddingcardecorations.com';
const phoneNumber = '+923227555459';
const whatsappNumber = '923227555459';
const whatsappMessage = encodeURIComponent(`Hi! I'm interested in ${product.title} (Rs ${product.price.toLocaleString()}). Can you help me?`);
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${whatsappMessage}`;

// Product Schema for JSON-LD
const productSchema = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": product.title,
  "description": product.description,
  "image": `${siteUrl}${product.image}`,
  "brand": {
    "@type": "Brand",
    "name": "Lahore Blooms"
  },
  "offers": {
    "@type": "Offer",
    "url": `${siteUrl}/design/${product.slug}`,
    "priceCurrency": "PKR",
    "price": product.price.toString(),
    "priceValidUntil": new Date(Date.now() + 365 * 24 * 60 * 60 * 1000).toISOString().split('T')[0],
    "availability": "https://schema.org/InStock",
    "seller": {
      "@type": "LocalBusiness",
      "name": "Lahore Blooms",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Lahore",
        "addressRegion": "Punjab",
        "addressCountry": "PK"
      }
    },
    "areaServed": {
      "@type": "City",
      "name": "Lahore"
    }
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5.0",
    "reviewCount": "2"
  }
};

// Breadcrumb Schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": siteUrl
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Designs",
      "item": `${siteUrl}#packages`
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": product.title,
      "item": `${siteUrl}/design/${product.slug}`
    }
  ]
};
